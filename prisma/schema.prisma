generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())

  userName String @unique
  password String
  email String @unique

  phone String? @unique
  name String?

  registeredAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role Role @default(USER)

  organizations Organization[] @relation("Employees")
  leads Organization[] @relation("Leaders")
}

model Organization{
  id String @id @default(cuid())

  leader User @relation("Leaders", fields: [leaderId], references: [id])
  leaderId String

  employees User[] @relation("Employees")
}

enum Role{
  USER
  ADMIN
}